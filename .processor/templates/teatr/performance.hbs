{{#partial "caption"}}{{{ name }}}{{/partial}}
{{#partial "keywords"}}{{{ name }}}{{/partial}}

{{#partial "content"}}
	
	<div class = "header_l">{{{ author }}}</div>
	
	<h1 class = "header_t">"{{{ name }}}" </h1>

    {{#if genre}}
		<div class = "header_l">{{{ genre }}}</div>
    {{/if}}

    {{#if gallery}}
	<center>
			<ul id = "mycarousel" class="jcarousel-skin-tango">
            {{#each gallery}}
			
					<li>
                <a href="{{ url_small }}" title="{{{ title }}}">

                    <img src="{{ url }}" class="lightbox news_body_bottom" title="{{{ title }}}"/>
						</a>
					</li>

            {{/each}}
			</ul>
	</center>
    {{/if}}


    <div class= "header_t"><p>Постановча група</p></div>
  	<div>

    {{#if additional_director_info}}{{{ additional_director_info }}}{{/if}}
    {{#unless additional_director_info}}Режисер - {{/unless}}

    {{#if director_has_page}}<a style="font-weight: normal" href = "{{ director_page_url }}">{{{ director }}}</a>{{/if}}
    {{#unless director_has_page}}{{{ director }}}{{/unless}}
  	{% if performance.producer.has_page %}
  	</div>

  	<div>
    {{#each staff}}
  		<div>
  		{{s.personage.person}} -
	
		
	  			{% if s.trouper.has_page %}
	  				<a style="font-weight: normal" href = "{% url 'portal-trouper-item' s.trouper.unique_name%}">{{s.trouper.surname}} {{s.trouper.name}}</a>
				{% else %}
					{{s.trouper.surname}} {{s.trouper.name}}
				{% endif %}
		
		</div>
    {{/each}}
	</div>
  	<div class= "header_t "><p>Дійові особи та виконавці</p></div>

    {{#each personages}}
		<div><b>{{p.person}}</b> - 
		{% for tr in trouper_roles %}		
			{% if p == tr.personage %}
				{% if tr.trouper.has_page %}
					<a style="font-weight: normal" href = "{% url 'portal-trouper-item' tr.trouper.unique_name%}">{{tr.trouper.surname}} {{tr.trouper.name}}</a>,
				{% else %}
					{{tr.trouper.surname}} {{tr.trouper.name}},	
				{% endif%}
				
				
			{% endif%}
    {{/each}}
		</div>

    {{#if duration}}
    <div>
        <br/><strong>Тривалість вистави - </strong> {{{ duration }}}
    </div>
    {{/if}}
    {{#if premiere}}
	{% if performance.%}
	<div class = "header_t "><p>Прем'єра вистави</p>  <div class='currentDate'>{{{ premiere }}}</div></div>
    {{/if}}


    {{#if addition }}
        <div>{{{ addition }}}</div>
    {{/if}}
